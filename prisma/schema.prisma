generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Album {
  id          String   @id @default(cuid())
  userId      String?
  userName      String?
  title       String
  description String
  images       Image[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([createdAt])
  @@map("albums")
}

model Image {
  id        String   @id @default(cuid())
  userId    String?
  userName    String?
  url       String
  album     Album    @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId   String
  createdAt DateTime @default(now())
}